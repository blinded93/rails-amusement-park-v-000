<h2>Editting Attraction</h2>
<%= form_for @attraction do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :min_height, "Height Requirement" %><br>
    <%= f.number_field :min_height, placeholder: "(in inches)" %>
  </p>
  <p>
    <%= f.label :happiness_rating, "How fun is it?" %><br>
    <%= f.number_field :happiness_rating, placeholder: "1-5 scale" %>
  </p>
  <p>
    <%= f.label :nausea_rating, "How nausea-inducing is it?" %><br>
    <%= f.number_field :nausea_rating, placeholder: "1-5 scale" %>
  </p>
  <p>
    <%= f.label :tickets, "How many tickets does it cost?" %><br>
    <%= f.number_field :tickets %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
